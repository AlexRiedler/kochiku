!!!
%html
  %head
    %title
      Kochiku
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'jquery.qtip.css', :media => 'screen'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    -#= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.js"
    = javascript_include_tag 'jquery-1.5.2.min', "rails", "application", 'jquery.qtip/jquery.qtip'
    = csrf_meta_tag
    = favicon_link_tag
  %body
    #header.section-wrapper
      .section
        %a{:href => root_path, :class => "logo"}
          %h1
            <span class="title-first">Kochi</span><span class="title-second">ku</span>
        #nav
          = link_to "Dogfood Build", new_build_path
          = link_to "Resque Admin", "/resque"

    #content.section-wrapper
      .section
        = yield


  :javascript
    $(document).ready(function() {
      $('.part').qtip({
        content: { attr: 'paths' },
        position: {
          my: 'top center',
          at: 'bottom center'
        },
        style: {
          width: '500px',
          classes: 'ui-tooltip-shadow paths-tooltip'
        },
        events: {
          show: function(event, api) {
            // By default the content is a |-delimited string of paths.
            var $content = api.elements.content;
            var content = $content.html().split('|');
            var contentHtml = '<ul class="paths">';
            for (var i = 0; i < content.length; ++i) {
              contentHtml += '<li>' + content[i] + '</li>';
            }
            contentHtml += '</ul>';
            $content.html(contentHtml);
          }
        }
      });
    });
