.projects
  %div
    - @projects.each do |project|
      %div.ci-build-info{:class => "ci-#{project.last_build_state}" }
        %div.project-name
          = link_to(project.name, project_path(project))
        %div.state{:class => "build-#{project.last_build_state}" }=  project.last_build_state.to_s.capitalize
        %div.project-link
        = link_to("Projects", projects_repository_path(project.repository))

.repositories-link
  = link_to("Repositories", repositories_path)